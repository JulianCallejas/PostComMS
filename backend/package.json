{
  "name": "postcomms-backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:gateway": "ts-node-dev --respawn --transpile-only src/gateway/server.ts",
    "dev:auth": "ts-node-dev --respawn --transpile-only src/services/auth/server.ts",
    "dev:users": "ts-node-dev --respawn --transpile-only src/services/users/server.ts",
    "dev:posts": "ts-node-dev --respawn --transpile-only src/services/posts/server.ts",
    "start:gateway": "node dist/gateway/server.js",
    "start:auth": "node dist/services/auth/server.js",
    "start:users": "node dist/services/users/server.js",
    "start:posts": "node dist/services/posts/server.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "seed": "ts-node prisma/seed.ts",
    "test": "jest --runInBand",
    "test:auth": "jest src/services/auth/__tests__",
    "test:users": "jest src/services/users/__tests__",
    "test:posts": "jest src/services/posts/__tests__",
    "test:coverage": "jest --runInBand --coverage",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "http-proxy-middleware": "^3.0.3",
    "jsonwebtoken": "^9.0.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.26.0",
    "@jest/globals": "^29.7.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.4",
    "@types/supertest": "^2.0.16",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "prisma": "^5.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
